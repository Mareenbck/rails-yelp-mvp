<h1>Add a Restaurant</h1>

<%= form_for(@restaurant) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :category %>
  <%= f.select :category, Restaurant::CATEGORIES %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :phone_number %>
  <%= f.telephone_field :phone_number %>

  <%= f.submit %>
<% end %>

<br>
<%= link_to "Back", restaurants_path %>
